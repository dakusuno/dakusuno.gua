<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/top_container_placeholder"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#ffff"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_user_avatar_placeholder"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/user_avatar_placeholder"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@color/background"/>
            </com.google.android.material.card.MaterialCardView>
            <View
                android:id="@+id/user_name_placeholder"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/card_user_avatar_placeholder"
                android:layout_width="220dp"
                android:layout_height="10dp"
                android:layout_marginLeft="10dp"
                android:background="@color/background"/>
            <View
                android:id="@+id/user_username_placeholder"
                app:layout_constraintTop_toBottomOf="@id/user_name_placeholder"
                app:layout_constraintLeft_toRightOf="@+id/card_user_avatar_placeholder"
                android:layout_width="100dp"
                android:layout_height="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:background="@color/background"
                />
            <View
                android:id="@+id/user_followers_placeholder"
                android:layout_width="200dp"
                android:layout_height="10dp"
                app:layout_constraintLeft_toRightOf="@id/card_user_avatar_placeholder"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toBottomOf="@id/user_username_placeholder"
                android:background="@color/background"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="5dp"
        android:id="@+id/card_user_repository_placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/top_container_placeholder">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <View
                android:id="@+id/text_user_company_placeholder"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="10dp"
                android:layout_width="100dp"
                android:layout_height="10dp"
                android:background="@color/background"/>
            <View
                android:id="@+id/user_company_placeholder"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="10dp"
                android:layout_width="150dp"
                android:layout_height="10dp"
                android:background="@color/background"/>
            <View
                android:id="@+id/text_user_location"
                app:layout_constraintTop_toBottomOf="@id/text_user_company_placeholder"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="10dp"
                android:layout_width="120dp"
                android:layout_height="10dp"
                android:background="@color/background"/>
            <View
                android:id="@+id/user_location_placeholder"
                app:layout_constraintTop_toBottomOf="@id/user_company_placeholder"
                app:layout_constraintRight_toRightOf="parent"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:layout_width="110dp"
                android:layout_height="10dp"
                android:background="@color/background"/>
            <View
                android:id="@+id/text_user_repository_placeholder"
                app:layout_constraintTop_toBottomOf="@id/user_location_placeholder"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="10dp"
                android:layout_width="100dp"
                android:layout_height="10dp"
                android:background="@color/background"/>
            <View
                android:id="@+id/user_repository_placeholder"
                app:layout_constraintTop_toBottomOf="@id/user_location_placeholder"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="10dp"
                android:layout_width="100dp"
                android:layout_height="10dp"
                android:background="@color/background"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
    <View
        app:layout_constraintTop_toBottomOf="@id/card_user_repository_placeholder"
        android:id="@+id/tab_layout_placeholder"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <View
        app:layout_constraintTop_toBottomOf="@id/tab_layout_placeholder"
        android:id="@+id/pager_placeholder"
        android:background="@color/background"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</androidx.constraintlayout.widget.ConstraintLayout>